{
  "name": "groceries-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.1.1",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "14.2.1",
    "axios": "0.27.2",
    "bootstrap": "5.1.3",
    "env-cmd": "10.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.30.0",
    "immutability-helper": "3.1.1",
    "moment": "2.29.3",
    "node-sass": "7.0.1",
    "popper.js": "1.16.1",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "query-string": "7.1.1",
    "react": "17.0.2",
    "react-async": "10.0.1",
    "react-bootstrap": "2.4.0",
    "react-dom": "17.0.2",
    "react-idle-timer": "5.4.0",
    "react-router-dom": "6.3.0",
    "react-scripts": "5.0.1",
    "react-toastify": "9.0.5",
    "sass-loader": "13.0.2"
  },
  "scripts": {
    "start": "REACT_APP_VERSION=$(git rev-parse --short HEAD) react-scripts start",
    "build:production": "rm -rf build && REACT_APP_VERSION=$(git rev-parse --short HEAD) react-scripts build",
    "deploy:production": "sh scripts/deploy-prod.sh",
    "build:staging": "rm -rf build && REACT_APP_VERSION=$(git rev-parse --short HEAD) env-cmd -f .env.staging react-scripts build",
    "deploy:staging": "sh scripts/deploy-staging.sh",
    "lint": "eslint --ext .js,.jsx src/",
    "test": "react-scripts test",
    "test:ci": "npm run lint && CI=true npm test -- --coverage",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*.{js,jsx,json,css,md}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "react/require-default-props": "error"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/serviceWorker.js",
      "!<rootDir>/src/AppRouter.jsx",
      "!<rootDir>/src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 97.32,
        "functions": 99.7,
        "lines": 99.3,
        "statements": 99.33
      }
    },
    "resetMocks": true,
    "clearMocks": true,
    "restoreMocks": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
