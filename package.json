{
  "name": "groceries-client",
  "version": "0.1.0",
  "private": true,
  "overrides": {
    "autoprefixer": "10.4.19"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.5.2",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/react": "16.0.0",
    "@testing-library/user-event": "14.5.2",
    "autoprefixer": "10.4.19",
    "axios": "^1.6.5",
    "bootstrap": "5.3.3",
    "env-cmd": "10.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.4",
    "immutability-helper": "3.1.1",
    "moment": "2.30.1",
    "node-sass": "9.0.0",
    "popper.js": "1.16.1",
    "postcss": "8.4.39",
    "prettier": "3.3.3",
    "query-string": "9.0.0",
    "react": "18.3.1",
    "react-async": "10.0.1",
    "react-bootstrap": "2.10.4",
    "react-dom": "18.3.1",
    "react-idle-timer": "5.7.2",
    "react-router-dom": "6.25.1",
    "react-scripts": "5.0.1",
    "react-toastify": "10.0.5",
    "sass-loader": "14.2.1"
  },
  "scripts": {
    "start": "REACT_APP_VERSION=$(git rev-parse --short HEAD) react-scripts start",
    "build:production": "rm -rf build && REACT_APP_VERSION=$(git rev-parse --short HEAD) react-scripts build",
    "deploy:production": "sh scripts/deploy-prod.sh",
    "build:staging": "rm -rf build && REACT_APP_VERSION=$(git rev-parse --short HEAD) env-cmd -f .env.staging react-scripts build",
    "deploy:staging": "sh scripts/deploy-staging.sh",
    "lint": "eslint --ext .js,.jsx src/",
    "test": "react-scripts test",
    "test:ci": "npm run lint && CI=true npm test -- --coverage",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*.{js,jsx,json,css,md}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2
        }
      ],
      "curly": [
        "error",
        "all"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/serviceWorker.js",
      "!<rootDir>/src/AppRouter.jsx",
      "!<rootDir>/src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95.82,
        "functions": 98.25,
        "lines": 98.92,
        "statements": 98.96
      }
    },
    "resetMocks": true,
    "clearMocks": true,
    "restoreMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!query-string|decode-uri-component|split-on-first|filter-obj)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11"
  }
}
