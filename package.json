{
  "name": "groceries-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.1",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@testing-library/user-event": "12.2.2",
    "axios": "0.21.0",
    "bootstrap": "4.5.3",
    "env-cmd": "10.1.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "immutability-helper": "3.1.1",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "moment": "2.29.1",
    "node-sass": "4.14.1",
    "popper.js": "1.16.1",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-async": "10.0.1",
    "react-bootstrap": "1.4.0",
    "react-dom": "17.0.1",
    "react-idle-timer": "4.5.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.1",
    "react-toastify": "6.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build:production": "react-scripts build",
    "deploy:production": "sh scripts/deploy-prod.sh",
    "build:staging": "env-cmd -f .env.staging react-scripts build",
    "deploy:staging": "sh scripts/deploy-staging.sh",
    "lint": "eslint --ext .js,.jsx src/",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:ci": "npm run lint && CI=true npm test -- --coverage",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*.{js,jsx,json,css,md}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "react/require-default-props": "error"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/serviceWorker.js",
      "!<rootDir>/src/AppRouter.jsx",
      "!<rootDir>/src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 97.33,
        "functions": 100,
        "lines": 99.38,
        "statements": 99.41
      }
    },
    "resetMocks": true,
    "clearMocks": true,
    "restoreMocks": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
